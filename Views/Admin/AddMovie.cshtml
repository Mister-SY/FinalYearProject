@{
    ViewData["Title"] = "Add Movie";
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Add Movie</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-controller="Home" asp-action="Stream" method="post">
                <input class="form-control" id="movietitle" type="text" name="movietitle" placeholder="Enter the Movie Title" required><br />
                <input class="form-control" id="genre" type="text" name="genre" placeholder="Enter the Genre" required><br />
                <input class="form-control" id="actorlist" type="text" name="actorlist" placeholder="Enter the Actor List" required><br />
                <input class="form-control" id="duration" type="text" name="duration" placeholder="Enter the Duration" required><br />
                <input class="form-control" id="movielink" type="url" name="movielink" placeholder="Enter the Movie Image Link" required><br />
                <input class="form-control" id="movietrailerlink" type="url" name="movietrailerlink" placeholder="Enter the Movie Trailer Link" required><br />
                <textarea class="form-control" id="synopsis" type="text" name="synopsis" placeholder="Enter the Movie Synopsis" required></textarea><br />
                <input type="submit" value="Sign in Securely" OnClick="authenticateLogin" class="form-control btn btn-primary" />
            </form>
        </div>
    </div>
</div>
