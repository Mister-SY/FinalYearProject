@{
    ViewData["Title"] = "Products";
    var products = (List<ProductModel>)ViewData["products"];
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Welcome to Product Management</h1>

    <a href="AddProduct" class="btn btn-outline-primary">Add Product</a>
  
    <div class="col-12">
        <table style="border: 1.5px solid blue" class="table table-striped">
            <thead>


                <tr>
                    <td><b>Product No:</b></td>
                    <td><b>Product Name</b></td>
                    <td><b>Quantity</b></td>
                    <td><b>Unit Price</b></td>
                    <td><b>View</b></td>
                </tr>
                                    @foreach (var product in products)
                    {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                        <td>@product.ProductQuantity</td>
                    <td>@product.ProductPrice</td>
                    <td>
                        <a href="ProductView?id=@product.ProductID">View</a>
                    </td>
                </tr>
                    }
            </thead>
        </table>

    </div>
</div>
