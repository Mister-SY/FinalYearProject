@{
    ViewData["Title"] = "Add Tech Page";
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Add Tech</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-controller="Home" asp-action="Tech" method="post">
                <input class="form-control" id="techname" type="text" name="techname" placeholder="Enter Name" required><br />
                <input class="form-control" id="rentalprice" type="number" name="rentalprice" placeholder="Enter Rental Price" required><br />
                <input class="form-control" id="supplierid" type="number" name="supplierid" placeholder="Enter Supplier ID" required><br />
                <input class="form-control" id="stock" type="number" name="stock" placeholder="Enter Stock" required><br />
                <input class="form-control" id="techlink" type="url" name="techlink" placeholder="Enter Tech Image Link" required><br />
                <textarea class="form-control" id="rentdesc" type="text" name="rentdesc" placeholder="Enter Description" required></textarea><br />
                <input type="submit" value="Add Tech to Stock" OnClick="authenticateLogin" class="form-control btn btn-primary" />
            </form>
        </div>
    </div>
</div>
