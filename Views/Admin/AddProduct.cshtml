@{
    ViewData["Title"] = "Add Product Page";
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Add Product</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-controller="Home" asp-action="Products" method="post">
                <input class="form-control" id="productname" type="text" name="productname" placeholder="Enter your Product Name" required><br />
                <input class="form-control" id="productprice" type="number" name="productprice" placeholder="Enter your Product Price" required><br />
                <input class="form-control" id="productrating" type?="number" name="productrating" placeholder="Enter your Product Rating" required><br />
                <input class="form-control" id="productqty" type="number" name="productqty" placeholder="Enter your Product Quantity" required><br />
                <input class="form-control" id="productlink" type="url" name="productlink" placeholder="Enter your Product Image Link" required><br />
                <textarea class="form-control" id="productdesc" type="text" name="productdesc" placeholder="Enter your Product Description" required></textarea><br />
                <input type="submit" value="Add Product to Stock" OnClick="authenticateLogin" class="form-control btn btn-AddProduct" />
            </form>
        </div>
    </div>
</div>
