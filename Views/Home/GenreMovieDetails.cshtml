@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Movie View";

    var movie = (MovieModel)ViewData["movie"];
}
<div class="text-center">
    @{
        if (movie == null)
        {
            <h1 class="display-4" style="margin-bottom:15px">No Movie was found with this Genre</h1>
        }
        else
        {
            <h1 class="display-4" style="margin-bottom:15px">@movie.MovieTitle</h1>
            <div class="row">

                <div class="col-md-4 " style="justify-items:center; align-content:center;">
                    <img src=@movie.MovieLink style="width:200px; margin:auto; padding:2px" />
                    <p style="margin-top:15px; text-align:center">
                        @movie.MovieTitle
                    </p>
                </div>

                <div class="col-md-6 " style="justify-items:center; align-content:center;">
                    <table class="table table-striped">
                        <tr>
                            <th>Title</th>
                            <td colspan="2">@movie.MovieTitle</td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>@movie.Genre</td>
                        </tr>
                        <tr>
                            <th>Duration</th>
                            <td>@movie.Duration</td>
                        </tr>
                        <tr>
                            <th>ActorList</th>
                            <td>@movie.ActorList</td>
                        </tr>
                        <tr>
                            <th>Synopsis</th>
                            <td>@movie.Synopsis</td>
                        </tr>
                        <tr>
                            <iframe width="560" height="315" src="@movie.MovieTrailerLink" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        </tr>

                        <tr>
                            <th colspan="2"><a href="MovieReview" class="btn btn-primary">Review</a></th>
                        </tr>

                    </table>
                </div>

            </div>
            }
        }
    </div>
