@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Product View";

    var product = (ProductModel)ViewData["product"];
}
<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Welcome Phoenix Products</h1>
    <div class="row">

        <div class="col-md-4 " style="justify-items:center; align-content:center;">
            <img src=@product.ProductImageLink style="width:200px"/>
            <p style="margin-top:15px; text-align:center">
                @product.ProductName
            </p>
        </div>

        <div class="col-md-8 " style="justify-items:center; align-content:center;">
            <table class="table table-striped">
                <tr>
                    <th>Product</th>
                    <td colspan="2">@product.ProductName</td>
                </tr>

                <tr>
                    <th>Description</th>
                    <td>@product.ProductDescription</td>
                </tr>

                <tr>
                    <th>Price</th>
                    <td>£@product.ProductPrice</td>
                </tr>
                <tr>
                    <td></td>
                    <th colspan="2"><a href="AddToCart?id=@product.ProductID" class="btn btn-primary">Add to Cart</a></th>
                </tr>

            </table>
        </div>

    </div>
</div>
