@model IEnumerable<RentModel>;
@{
    ViewData["Title"] = "Cart";

    var rents = (List<RentModel>)ViewData["rents"];
}


<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Welcome to Your Cart</h1>
    <div class="row">

        <div class="col-md-12 " style="justify-items:center; align-content:center;">
            <table class="table table-striped">
                <tr>

                    <th class="text-left">RentID</th>
                    <th>Name</th>
                    <th>Rental Price</th>
                </tr>
                @{
                    double total = 0;
                    foreach (var rent in rents)
                    {
                        total += Convert.ToDouble(rent.RentalPrice);
                        <tr>
                            <td class="text-left">@rent.RentID</td>
                            <td>@rent.ProductName</td>
                            <td>£@rent.RentalPrice</td>
                        </tr>
                    }


                    <tr>
                        <th class="text-left">Grand Total</th>
                        <td></td>
                        <th>£@total</th>
                    </tr>
                    <tr>
                        <th class="text-left"><a href="CheckoutView" class="btn btn-primary">Go To Checkout</a></th>
                        <th class="text-center"><a href="Tech" class="btn btn-primary">Continue Shopping</a></th>
                        <th colspan="3"><a href="Index" class="btn btn-danger">Clear Cart</a></th>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>



