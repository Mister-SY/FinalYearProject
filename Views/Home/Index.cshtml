@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:10px">Welcome to Phoenix.co.uk</h1>
    <div class="row">
        <div class="col-12" style="justify-items:center; align-content:center; height:500px">
            <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=@ViewData["slide1_url"] alt="First slide" style="width:229px; height:400px ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@ViewData["slide2_url"] alt="Second slide" style="width:229px; height:400px ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@ViewData["slide3_url"] alt="Third slide" style="width:229px; height:400px ">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="1"></li>
                    <li data-target="#mycarousel" data-slide-to="2"></li>
                </ol>
            </div>
        </div>
       
        <div class="col-md-4 " style="justify-items:center; align-content:center;">
            <a href="Home/Stream">
                <img src="https://cdn.shopify.com/s/files/1/0037/8008/3782/products/IMG_0518_85da327c-1062-4e6b-a601-624bb87c610c_1024x1024@2x.jpg?v=1663772498" style="width:229px; height:260px; margin:auto; padding:10px" />
                <p style="margin-top:15px; text-align:center">
                    Streaming
                </p>
            </a>
        </div>

        <div class="col-md-4 " style="justify-items:center; align-content:center;">
            <a href="Home/Products">
                <img src="https://m.media-amazon.com/images/I/71cEqMEcrKL.__AC_SX300_SY300_QL70_ML2_.jpg" style="width:229px; height:260px; margin:auto; padding:10px" />
                <p style="margin-top:15px; text-align:center">
                    Home Products
                </p>
            </a>
        </div>

        <div class="col-md-4" style="justify-items:center; align-content:center;">
            <a href="Home/Tech">
                <img src="https://m.media-amazon.com/images/I/81Tn70hgBQL._AC_SX679_.jpg" style="width:229px; height:260px; margin:auto; padding:10px" />
