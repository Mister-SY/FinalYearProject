@model IEnumerable<RentModel>
@{
    ViewData["Title"] = "Tech";

    var rents = (List<RentModel>)ViewData["rents"];
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:15px">Welcome to Phoenix Tech Rental</h1>
    <div class="row">
        <div class="col-12" style="justify-items:center; align-content:center; height:300px">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=@ViewData["slide1_url"] alt="First slide" style="width:229px; height:300px ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@ViewData["slide2_url"] alt="Second slide" style="width:229px; height:300px ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@ViewData["slide3_url"] alt="Third slide" style="width:229px; height:300px ">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="1"></li>
                    <li data-target="#mycarousel" data-slide-to="2"></li>
                </ol>
            </div>
        </div>

        <div class="container">
            <nav class="nav">
                <div class="nav-left">
                    <ul>
                        <li> <b>What's Trending...</b> </li>
                    </ul>
                </div>
            </nav>
        </div>
        @foreach (var rent in rents)
        {
            <div class="col-md-4 " style="justify-items:center; align-content:center;">
                <a href="TechView?id=@rent.RentID">
                    <img src=@rent.ProductImageLink style="width: 229px; height: 190px; margin: auto; padding: 10px" />
                    <p style="margin-top:15px; text-align:center">
                        @rent.ProductName
                    </p>
                </a>
            </div>
        }

    </div>
</div>
